{
    "name": "silberengel/sybil",
    "description": "Nostr utility for publishing longer texts",
    "keywords": ["nostr", "library"],
    "license": "MIT",
    "require": {
        "php": ">=8.1 <8.4",
        "ext-gmp": "*",
        "ext-xml": "*",
        "bitwasp/bech32": "^0.0.1",
        "phrity/websocket": "^3.0",
        "simplito/elliptic-php": "^1.0",
        "uma/phpecc": "^0.1.3",
        "swentel/nostr-php": "^1.4.1",
        "monolog/monolog": "^3.7"
    },
    "require-dev": {
        "allure-framework/allure-phpunit": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.51",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
       "psr-4": {
         "sybil\\": "src/"
          }
        },
        "bin": [
          "bin/nostr-php"
        ],
        "config": {
          "platform": {
            "php": "8.1"
          },
          "sort-packages": true
        },
        "scripts": {
          "lint": "@php vendor/bin/php-cs-fixer fix -v"
        }
      }
